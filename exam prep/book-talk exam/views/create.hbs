<body>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section class="create-form-container">

        <form method="post">
            <h3>Create Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" id="title" value="{{title}}">
            <label>Author</label>
            <input type="text" name="author" class="box" id="author" value="{{author}}">
            <label>Genre</label>
            <input type="text" name="genre" class="box" id="genre" value="{{genre}}">
            <label>Stars</label>
            <input type="number" name="stars" class="box" id="stars" value="{{stars}}">
            <label>Image</label>
            <input type="text" name="image" class="box" id="image" value="{{image}}">
            <label>Review</label>
            <textarea class="box" name="review" value="{{review}}"></textarea>
            <input type="submit" value="Create" class="btn">
        </form>

    </section>
</body>
